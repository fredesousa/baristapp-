<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center mb-4">Votre Panier</h1>

          <table class="table table-striped">
            <thead>
              <tr>
                <th>Café</th>
                <th>Quantité</th>
                <th>Prix</th>
                <th>Total</th>
                <th>Actions</th> <!-- Nouvelle colonne pour les actions -->
              </tr>
            </thead>
            <tbody>
              <% @cart.cart_items.each do |item| %>
                <tr>
                  <td><%= item.coffee.name %></td>
                  <td><%= item.quantity %></td>
                  <td><%= number_to_currency(item.coffee.price) %></td>
                  <td><%= number_to_currency(item.quantity * item.coffee.price) %></td>
                  <td>
                    <button class="btn btn-link p-0 ml-2 text-decoration-none">
                      <i class="fa fa-pencil-alt" style="color: #6F4E37;"></i>
                    </button>
                    <button class="btn btn-link p-0 ml-2 text-decoration-none">
                      <i class="fa fa-trash" style="color: #6F4E37;"></i>
                    </button>
                  </td>
                </tr>
              <% end %>
            </tbody>
          </table>

          <h3 class="text-center my-4">Total: <%= number_to_currency(@cart.total_price) %></h3>

          <div class="text-center">
            <%= button_to "Valider le panier", checkout_cart_path, method: :post, class: "btn-custom btn-lg mb-4" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
