<div class=" signin d-flex justify-content-center align-items-center min-vh-100">
  <div class="col-md-6 col-lg-4">
    <h2 class="text-center  ">Login</h2>

    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), html: { class: 'form-signin' }) do |f| %>
      <div class="form-group">
        <%= f.input :email, 
                    required: false, 
                    autofocus: true, 
                    input_html: { class: 'form-control', autocomplete: 'email' }, 
                    label_html: { class: 'form-label' } %>
      </div>

      <div class="form-group">
        <%= f.input :password, 
                    required: false, 
                    input_html: { class: 'form-control', autocomplete: 'current-password' }, 
                    label_html: { class: 'form-label' } %>
      </div>

      <% if devise_mapping.rememberable? %>
        <div class="form-check mb-3">
          <%= f.input :remember_me, as: :boolean, 
                      input_html: { class: 'form-check-input' }, 
                      label_html: { class: 'form-check-label' } %>
        </div>
      <% end %>

      <div class="d-grid gap-2">
        <%= f.button :submit, "Login", class: "btn btn-primary btn-block" %>
      </div>
    <% end %>

    <%= render "devise/shared/links" %>
  </div>
</div>
