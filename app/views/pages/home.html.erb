<h1 class="text-center mt-5">Bienvenue sur notre application de sélection de cafés!</h1>

<% if user_signed_in? %>
  <div class="container mt-4">
    <p class="lead">Bienvenue <%= current_user.email %>!</p>

    <div class="card">
      <div class="card-body">
        <h2 class="card-title">Choisissez vos préférences de café</h2>

        <%= form_with(model: @preference, url: user_preferences_path(current_user), local: true, class: "mt-3") do |form| %>
          <div class="form-group">
            <%= form.label :coffee_form, "Forme de café" %><br>
            <%= form.select :coffee_form, ['Capsule', 'Grain'], { prompt: "Choisissez une option" }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :weekly_consumption, "Nombre de cafés par semaine" %><br>
            <%= form.select :weekly_consumption, ['2', '4', 'Plus de 6'], { prompt: "Choisissez une option" }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.label :coffee_type, "Type de café" %><br>
            <%= form.select :coffee_type, ['Arabica', 'Robusta'], { prompt: "Choisissez une option" }, class: "form-control" %>
          </div>

          <div class="form-group">
            <%= form.submit "Enregistrer", class: "btn btn-primary" %>
          </div>
        <% end %>

      </div>
    </div>
  </div>
<% else %>
  <div class="container mt-4">
    <p class="lead">Vous n'êtes pas connecté.</p>
    <%= link_to 'S\'inscrire', new_user_registration_path, class: "btn btn-success mr-2" %>
    <%= link_to 'Se connecter', new_user_session_path, class: "btn btn-primary" %>
  </div>
<% end %>
