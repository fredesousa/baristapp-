<!-- app/views/coffees/index.html.erb -->

<div class="container-fluid mt-4">
  <div class="row">
    <!-- Colonne des filtres -->
    <div class="col-lg-3 mb-3" >
      <div class="card filter-card">
        <div class="card-body">
        <%= link_to "Voir tous les cafés", coffees_path, class: "btn btn-custom w-100 custom-search-btn center-submit mb-4" %>
          <!-- Barre de recherche -->
          <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
            <%= text_field_tag :search, params[:search], placeholder: "Rechercher par nom de café", class: "form-control custom-search-input mb-2" %>
            <%= submit_tag "Rechercher", class: "btn btn-custom w-100 custom-search-btn center-submit" %>
          <% end %>

          <!-- Autres filtres -->
          <div class="mt-3">
            <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
              <%= select_tag :origin, options_for_select(Coffee::ORIGINS), include_blank: "Origine", class: "form-control custom-search-input mb-2" %>
              <%= submit_tag "Filtrer par origine", class: "btn btn-custom w-100 custom-search-btn" %>
            <% end %>

            <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
              <%= select_tag :search_strength, options_for_select((1..6).map { |n| ["Force #{n}", n] }, params[:search_strength]), include_blank: "Force du café", class: "form-control custom-search-input mb-2" %>
              <%= submit_tag "Filtrer par force", class: "btn btn-custom w-100 custom-search-btn" %>
            <% end %>

            <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
              <%= select_tag :coffee_type, options_for_select(Coffee::COFFEES_TYPE), include_blank: "Type de café", class: "form-control custom-search-input mb-2" %>
              <%= submit_tag "Filtrer par type de café", class: "btn btn-custom w-100 custom-search-btn" %>
            <% end %>

            <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
              <%= select_tag :machin_type, options_for_select(Coffee::MACHINS_TYPE), include_blank: "Type de machine", class: "form-control custom-search-input mb-2" %>
              <%= submit_tag "Filtrer par type de machine", class: "btn btn-custom w-100 custom-search-btn" %>
            <% end %>
          </div>
        </div>
      </div>
    </div>

    <!-- Colonne des résultats de café -->
    <div class="col-lg-9">
      <% if @filters_applied %>
      <div class="card mb-4">
        <div class="card-body card-carousel-header">
          <h1 class="text-center mb-4">Résultats de la recherche - <%= @filter_name %></h1>
          <div class="row">
            <% @coffees.each do |coffee| %>
              <div class="col-md-4 mb-4">
                <div class="card h-100 coffee-card">
                  <% if coffee.photo.key.present? %>
                    <%= link_to coffee_path(coffee) do %>
                      <%= cl_image_tag coffee.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
                    <% end %>
                  <% end %>
                  <div class="card-body">
                    <h5 class="card-title"><%= coffee.name %></h5>
                    <p class="card-text"><%= coffee.description %></p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>
      <% else %>
        <% if @coffees_by_origin.present? %>
          <% @coffees_by_origin.each do |origin, coffees| %>
            <div class="card mb-4">
              <div class="card-body card-carousel-header">
                <h2 class="text-center mb-4">Cafés de <%= origin %></h2>
                <div id="carouselExampleCaptions_<%= origin %>" class="carousel slide" data-bs-ride="carousel">
                  <div class="carousel-inner">
                    <% coffees.each_slice(3).with_index do |slice, index| %>
                      <div class="carousel-item <%= 'active' if index.zero? %>">
                        <div class="row">
                          <% slice.each do |coffee| %>
                            <div class="col-md-4 mb-3">
                              <div class="card h-100 coffee-card">
                                <% if coffee.photo.key.present? %>
                                  <%= link_to coffee_path(coffee) do %>
                                    <%= cl_image_tag coffee.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
                                  <% end %>
                                <% end %>
                                <div class="card-body">
                                  <h5 class="card-title"><%= coffee.name %></h5>
                                  <p class="card-text color-gold"><%= coffee.description %></p>
                                </div>
                              </div>
                            </div>
                          <% end %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                  <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions_<%= origin %>" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Précédent</span>
                  </button>
                  <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions_<%= origin %>" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Suivant</span>
                  </button>
                </div>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="col-md-12">
            <p class="text-center">Aucun café correspondant à vos préférences n'a été trouvé.</p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
