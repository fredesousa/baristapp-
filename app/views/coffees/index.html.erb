






<div class="container mt-4">
  <div class="row">
    <!-- Colonne des filtres -->
    <div class="col-lg-3 mb-3">
      <div class="card">
        <div class="card-body">
          <!-- Barre de recherche -->
          <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
            <%= text_field_tag :search, params[:search], placeholder: "Rechercher par nom de café", class: "form-control" %>
            <%= submit_tag "Rechercher", class: "btn btn-primary mt-2" %>
          <% end %>

          <!-- Filtre par origine -->
          <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
            <%= select_tag :origin, options_for_select(Coffee::ORIGINS), include_blank: "Origine", class: "form-control" %>
            <%= submit_tag "Filtrer par origine", class: "btn btn-primary mt-2" %>
          <% end %>

          <!-- Filtre par force du café -->
          <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
            <%= select_tag :search_strength, options_for_select((1..6).map { |n| ["Force #{n}", n] }, params[:search_strength]), include_blank: "Force du café", class: "form-control" %>
            <%= submit_tag "Filtrer par force", class: "btn btn-primary mt-2" %>
          <% end %>

          <!-- Filtre par type de café -->
          <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
            <%= select_tag :coffee_type, options_for_select(Coffee::COFFEES_TYPE), include_blank: "Type de café", class: "form-control" %>
            <%= submit_tag "Filtrer par type de café", class: "btn btn-primary mt-2" %>
          <% end %>

          <!-- Filtre par type de machine -->
          <%= form_tag coffees_path, method: :get, class: "mb-3" do %>
            <%= select_tag :machin_type, options_for_select(Coffee::MACHINS_TYPE), include_blank: "Type de machine", class: "form-control" %>
            <%= submit_tag "Filtrer par type de machine", class: "btn btn-primary mt-2" %>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Colonne des résultats de café -->
    <div class="col-lg-9">
      <% if @filters_applied %>
        <h1 class="text-center mb-4">Résultats de la recherche - <%= @filter_name %></h1>
        <div class="row">
          <% @coffees.each do |coffee| %>
            <div class="col-md-4 mb-4">
              <div class="card h-100">
                <% if coffee.photo.key.present? %>
                  <%= link_to coffee_path(coffee) do %>
                    <%= cl_image_tag coffee.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
                  <% end %>
                <% end %>
                <div class="card-body d-flex flex-column">
                  <h5 class="card-title"><%= coffee.name %></h5>
                  <p class="card-text flex-grow-1"><%= coffee.description %></p>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      <% else %>
        <% if @coffees_by_origin.present? %>
          <% @coffees_by_origin.each do |origin, coffees| %>
            <h1 class="text-center mb-4">Cafés de <%= origin %></h1>
            <div id="carouselExampleCaptions_<%= origin %>" class="carousel slide" data-bs-ride="carousel">
              <div class="carousel-inner">
                <div class="carousel-item active">
                  <div class="row">
                    <% coffees.each_with_index do |coffee, index| %>
                      <div class="col-md-4 mb-4">
                        <div class="card h-100">
                          <% if coffee.photo.key.present? %>
                            <%= link_to coffee_path(coffee) do %>
                              <%= cl_image_tag coffee.photo.key, height: 300, width: 400, crop: :fill, class: "card-img-top" %>
                            <% end %>
                          <% end %>
                          <div class="card-body d-flex flex-column">
                            <h5 class="card-title"><%= coffee.name %></h5>
                            <p class="card-text flex-grow-1"><%= coffee.description %></p>
                          </div>
                        </div>
                      </div>
                      <% if (index + 1) % 3 == 0 && (index + 1) != coffees.size %>
                        </div></div><div class="carousel-item"><div class="row">
                      <% end %>
                    <% end %>
                  </div>
                </div>
              </div>
              <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleCaptions_<%= origin %>" data-bs-slide="prev">
                <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Previous</span>
              </button>
              <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions_<%= origin %>" data-bs-slide="next">
                <span class="carousel-control-next-icon" aria-hidden="true"></span>
                <span class="visually-hidden">Next</span>
              </button>
            </div>
          <% end %>
        <% else %>
          <div class="col-md-12">
            <p class="text-center">Aucun café correspondant à vos préférences n'a été trouvé.</p>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
