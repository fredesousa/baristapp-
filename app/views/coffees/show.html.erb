<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-10">
      <div class="card">
        <div class="card-body">
          <h1 class="text-center mb-4">Détails du votre selection</h1>

          <div class="row">
            <!-- Carte de base du café -->
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body text-center">
                  <div class="card-img-top-wrapper position-relative" style="height: 400px; overflow: hidden;">
                    <% if @coffee.photo.key.present? %>
                      <%= cl_image_tag @coffee.photo.key, class: "card-img-top", style: "width: 100%; height: 100%; object-fit: cover;" %>
                    <% end %>
                    <div>
                      <% if @favorite.present? %>
                        <!-- Icône de cœur plein pour les cafés favoris -->
                        <%= button_to favorite_path(@favorite), method: :delete, class: "btn-favorite" do %>
                          <i class="fa-solid fa-heart position-in-card"></i>
                        <% end %>
                      <% else %>
                        <!-- Icône de cœur vide pour les cafés non favoris -->
                        <%= button_to coffee_favorites_path(@coffee.id), method: :post, class: "btn-favorite" do %>
                          <i class="fa-regular fa-heart position-in-card"></i>
                        <% end %>
                      <% end %>
                    </div>
                  </div>
                  <div class="card-body">
                    <h5 class="card-title"><%= @coffee.name %></h5>
                    <p class="card-text"><%= @coffee.description %></p>
                    <ul class="list-group list-group-flush">
                      <li class="list-group-item"><strong>Origine :</strong> <%= @coffee.origin %></li>
                      <li class="list-group-item"><strong>Méthode d'infusion :</strong> <%= @coffee.brewing_method %></li>
                      <li class="list-group-item"><strong>Force :</strong> <%= @coffee.strength %></li>
                      <li class="list-group-item"><strong>Type :</strong> <%= @coffee.coffee_type %></li>
                      <!-- Ajoutez d'autres informations spécifiques au café -->
                    </ul>
                  </div>
                </div>
              </div>
            </div>

            <!-- Carte des commentaires -->
            <div class="col-md-6 mb-4">
              <div class="card h-100">
                <div class="card-body">
                  <h2>Nouveau Commentaire</h2>
                  <%= simple_form_for [@coffee, @review] do |f| %>
                    <%= f.input :description, label: "Commentaire" %>
                    <div class="rating">
                      <%= f.label :rating, "Note:" %>
                      <div class="stars">
                        <% (1..5).each do |i| %>
                          <%= radio_button_tag 'review[rating]', i, false, id: "star#{i}", class: 'star-input' %>
                          <label for="star<%= i %>" class="star">&#9733;</label>
                        <% end %>
                      </div>
                    </div>
                    <%= f.submit "Ajouter Commentaire", class: "btn-custom" %>
                  <% end %>
                  <h3 class="mt-4"><strong>Commentaires</strong></h3>
                  <ul class="list-group">
                    <% @coffee.reviews.each do |review| %>
                      <li class="list-group-item"> <p><%= review.description %></p> <p><strong>Note:</strong> <%= star_rating(review.rating) %></p> <!-- Système de likes --> <div> <% if review.liked_by?(current_user) %> <%= button_to coffee_review_like_path(@coffee, review, review.likes.find_by(user: current_user)), method: :delete, class: 'btn btn-danger' do %> <i class="fa-regular fa-thumbs-down"></i> <% end %> <% else %> <%= button_to coffee_review_likes_path(@coffee, review), method: :post, class: 'btn btn-primary' do %> <i class="fa-regular fa-thumbs-up"></i> <% end %> <% end %> <span><%= review.likes.count %> Likes</span> </div> </li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div> <!-- Fin de la rangée -->
        </div>
      </div>
    </div>
  </div>
</div>
