<!-- app/views/coffees/show.html.erb -->

<div class="container my-4">
  <div class="row justify-content-center">
    <div class="col-md-8">
      <div class="card text-center">
        <% if @coffee.photo.key.present? %>
          <div class="card-img-top-wrapper" style="height: 400px; overflow: hidden;">
            <%= cl_image_tag @coffee.photo.key, class: "card-img-top", style: "width: 100%; height: 100%; object-fit: cover;" %>
          </div>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= @coffee.name %></h5>
          <p class="card-text"><%= @coffee.description %></p>
          <ul class="list-group list-group-flush">
            <li class="list-group-item"><strong>Origine :</strong> <%= @coffee.origin %></li>
            <li class="list-group-item"><strong>Force :</strong> <%= @coffee.strength %></li>
            <!-- Ajoutez d'autres informations spécifiques au café -->
          </ul>
          <div class="mt-3">
            <% if current_user.favorites.include?(@coffee) %>
              <%= button_to 'Supprimer des favoris', coffee_favorite_path(@coffee), method: :delete, class: 'btn btn-danger' %>
            <% else %>
              <i class="fa-solid fa-heart"><%= button_to 'Ajouter aux favoris', coffee_favorite_path(@coffee), method: :post, class: 'btn btn-primary' %></i>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
